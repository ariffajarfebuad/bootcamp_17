<div class="container" style="margin-top: 16px;">
    <div class="row">
        <div class="col-md-5">
            <% if (contact) { %>
                <div class="card-body shadow-lg  bg-grey">
                    <h5 class="card-title"><%= contact.name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.mobile %></h6>
                    <% if (contact.email) { %>
                        <p class="card-text"><%= contact.email %></p>
                    <% } %>

                    <a href="/contact/edit/<%= contact.name %>" class="btn btn-info btn-sm">edit</a> 
                    

                    <a href="/contact" class="card-link mt-3 d-block">Back</a>
                </div>
            <% } else { %>
                <div class="alert alert-danger" role="alert">
                    Data kontak tidak ditemukan. <a href="/contact" class="alert-link"></a>.
                </div>
            <% } %>
        </div>
    </div>
</div>